<div class="haikei col-12">
  <div class="container form_area col-4">
    <div class="container ">
      <div class="top_message">poteshareでまだ体験したことのない旅へ</div>
        <div class="form">
        <%= search_form_for @q, url: rentals_path do |f| %>
          <div class="area_search mb-4">
            <p class="mb-0">エリア</p>
            <%= f.search_field :area_cont , class: "form_width", placeholder: "東京" %>
          </div>
          <%= f.submit "検索", class: "btn btn-primary btn-block d-grid gap-2 form_width "%>
        <% end %>
      </div>
    </div>
  </div>
</div>
