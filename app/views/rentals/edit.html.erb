<div class="container">
 <div class="col-md-4 offseet-md-4">
    <h2 class="text-center">新規作成</h2>
      <%= form_with model: @current_user, local:true do |f| %>
        <div class"form-group">
            <label>名前</label>
              <%= f.text_field:user_name, class: "form-control" %>
        </div>
        <div class"form-group">
            <p>画像</p>
             <%= f.file_field:user_image, class: "form-control" %>
        </div>
        <div class"form-group">
            <label>自己紹介</label>
              <%= f.text_area:intro, class: "form-control" %>
        </div>
          <div class"form-group">
                <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
</div> 
