 <nav class="navbar navbar-expand-lg navbar-dark bg-dark flex-column col-3 left-nav">
    <a class="navbar-brand" href="/rentals/top"></a>
      <ul class="navbar-nav flex-column">
        <li class="nav-item">
          <%=link_to "アカウント設定", account_path, class: "nav-link", visible: true %>
        </li>
        <li class="nav-item">
          <%=link_to "ユーザー設定", user_path(@current_user.id), class: "nav-link", visible: false %>
        </li>
      </ul>
</nav>
<div class="main users-edit users-right col-9">
  <div class="container col-6 mt-">
    <div class="form-heading">ユーザ情報編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_with model: @current_user, local:true, method: :patch do |f| %>
        <div class"form-group">
          <label>画像</label>
              <%= f.file_field:user_image, class: "form-control" %>
        </div>
        <div class"form-group">
          <label>ユーザ名</label>
             <%= f.text_field:user_name, class: "form-control" %>
        </div>
        <div class"form-group">
          <label>自己紹介</label>
             <%= f.text_area:intro, class: "form-control" %>
        </div>
          <div class"form-group">
                <%= f.submit "保存", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="clear"></div>
