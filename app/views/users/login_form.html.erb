 <% if @error_message %>
        <div class="flash">
          <%= @error_message %>
        </div>
      <% end %>
<div class="container">
 <div class="col-md-4 offseet-md-4">
    <h2 class="text-center">ログイン</h2>
      <%= form_with model: @users,local:true do |f| %>
        <div class"form-group">
            <label>e-mail</label>
              <%= f.email_field:email, class: "form-control" %>
        </div>
        <div class"form-group">              
        <label>Password</label>
             <%= f.password_field:password, class: "form-control" %>
          </div>
          <div class"form-group">
                <%= f.submit "ログインする", class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
    <%= link_to("新規作成", "/users/new") %>
</div> 
